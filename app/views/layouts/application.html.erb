<!DOCTYPE html>
<html>
  <head>
    <title><%= meta_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <meta name="description" content="#{meta_description}">


    <meta property="og:title" content="#{meta_title}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="#{request.original_url}">
    <meta property="og:image" content="#{meta_image}">
    <meta property="og:description" content="#{meta_description}">
    <meta property="og:site_name" content="#{meta_title}">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CNN80GLF83"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-CNN80GLF83');
    </script>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/category_nav' %>
    <%= render 'shared/flashes' %>
    <%= yield %>
    <%= render 'shared/footer' %>
    <%= render 'shared/sub-footer' %>
    <script>
      $(document).ready(function(){
        $("#informations-trigger").click(function(){
          $("#informations").toggle();
        });
      });
    </script>
    <script>
      $(document).ready(function(){
        $("#advice-trigger").click(function(){
          $("#advice").toggle();
        });
      });
    </script>
    <script>
      $(document).ready(function(){
        $("#description-trigger").click(function(){
          $("#description").toggle();
        });
      });
    </script>
  </body>
</html>
