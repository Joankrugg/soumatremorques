<div class="container product-index">
  <div class="row">
    <div class="col-lg-3">
      <div class="filters">

      </div>
    </div>
    <% @products.each do |product| %>
      <div class="col-lg-3">
        <div class="product-card">
          <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill, class: 'img-fluid' %>
          <%= product.name %>
          <%= product.price %>
          <%= product.rent %>
          <%= product.second_hand %>
          <%= product.max_load_weight %>
          <%= product.empty_weight %>
        </div>
      </div>
    <% end %>
  </div>
</div>
