<div class="container product-index">
  <div class="row">
    <div class="col-lg-3">
      <div class="filters">
        <div class="btn-filter" id='document-trigger'>
          Permis
        </div>

        <div class="filter-section-level2 collapse" id='documents'>
          <div class="btn-filter" id='permis-b-trigger'>
            Permis B
          </div>
          <div class="filter-section-level3 collapse" id='permis-b-usage'>
            <div class="btn-filter" id='b-casual-trigger'>
              Usage occassionnel
            </div>
              <div class="filter-section-level4 collapse" id='b-casual'>
                <div class="btn-filter">
                  Utilitaire
                </div>
                <div class="btn-filter">
                  Nautique
                </div>
                <div class="btn-filter">
                  Transport d'animaux
                </div>
                <div class="btn-filter">
                  Porte-voiture
                </div>
                <div class="btn-filter">
                  Porte-moto/quad
                </div>
                <div class="btn-filter">
                  Bennes
                </div>
                <div class="btn-filter">
                  Fourgon
                </div>
                <div class="btn-filter">
                  Plateau
                </div>
                <div class="btn-filter">
                  Magasin
                </div>
              </div>

            <div class="btn-filter" id='b-regular'>
              Usage régulier
            </div>
            <div class="btn-filter" id='b-often'>
              Usage intensif
            </div>
          </div>



          <div class="btn-filter" id='permis-b96-trigger'>
            Permis B96
          </div>

          <div class="filter-section-level3 collapse" id='permis-b96-usage'>
            <div class="btn-filter" id='b96-casual-trigger'>
              Usage occassionnel
            </div>
              <div class="filter-section-level4 collapse" id='b96-casual'>
                <div class="btn-filter">
                  Utilitaire
                </div>
                <div class="btn-filter">
                  Nautique
                </div>
                <div class="btn-filter">
                  Transport d'animaux
                </div>
                <div class="btn-filter">
                  Porte-voiture
                </div>
                <div class="btn-filter">
                  Porte-moto/quad
                </div>
                <div class="btn-filter">
                  Bennes
                </div>
                <div class="btn-filter">
                  Fourgon
                </div>
                <div class="btn-filter">
                  Plateau
                </div>
                <div class="btn-filter">
                  Magasin
                </div>
              </div>

            <div class="btn-filter">
              Usage régulier
            </div>
            <div class="btn-filter">
              Usage intensif
            </div>
          </div>




          <div class="btn-filter" id='permis-be-trigger'>
            Permis BE
          </div>
        </div>


        <div class="btn-filter" id='caracteristic-trigger'>
          Caractéristiques
        </div>

        <div class="filter-section collapse" id='caracteristic'>
          <div class="btn-filter">
            Ca A
          </div>
          <div class="btn-filter">
            Ca B
          </div>
          <div class="btn-filter">
            Ca C
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-9">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-6 col-sm-6 col-md-4 col-lg-3">
            <div class="product-card-shape">
              <div class="product-card">
                <div class="row">
                  <div class="col-12">
                    <p class="i-love-it">
                      <i class="far fa-heart"></i>
                    </p>
                  </div>
                </div>
                <%= cl_image_tag product.photo.key, class: 'img-fluid' %>
              </div>
              <p class='caracteristic-price'><%= product.price %> E</p>

              <div class="card-product-caracteristics">
                <h1 class="card-product-title">
                  <%= product.name %>
                </h1>
                <p class='caracteristic'><%= product.subcategory.name %></p>
                <p class='caracteristic'>PTAC: <%= product.empty_weight %> kg</p>
                <p class='best-caracteristic'>Idéal pour: product.caracteristic</p>
                <div class="btn btn-ghost" data-bs-toggle="modal" data-bs-target="#modal-<%= product.id %>">aperçu rapide</div>
                <div class="btn btn-flat">Acheter</div>
              </div>
            </div>
          </div>
          <!-- Modal -->
          <div class="modal fade" id="modal-<%= product.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel"><%= product.name %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="product-card">
                        <%= cl_image_tag product.photo.key, class: 'img-fluid' %>
                      </div>
                      <p class='modal-caracteristic-subcategory'><%= product.subcategory.name %></p>
                      <p class='modal-caracteristic-price'><%= product.price %> E</p>
                    </div>
                    <div class="col-lg-6">
                      <p>
                        <% 5.times do %>
                          <i class="fas fa-star"></i>
                        <% end %>
                      </p>
                      <p>Réglementation: <%= product.document.name %></p>
                      <p>Les points forts</p>

                      <p><span class='colored'><i class="fas fa-check-circle"></i></span> Usages <%=product.usage.name %>s </p>
                      <% if product.best_uses.present? %>
                        <% product.best_uses.each do |b| %>
                          <p><span class='colored'><i class="fas fa-check-circle"></span></i> <%= b.name %></p>
                        <% end %>
                      <% end %>
                      <% if product.rent? %>
                        <p class="caracteristic">disponible à la location</p>
                      <% else %>
                        <p class="caracteristic">en vente uniquement</p>
                      <% end %>
                      <% if product.second_hand? %>
                        <p class="caracteristic"><i class="fas fa-handshake"></i> Produit d'occasion</p>
                      <% else %>
                        <p class="caracteristic"><i class="fas fa-handshake"></i> Produit neuf</p>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

